@model Pedrinho.Models.Bug

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bugId" />
            <div class="form-group">
                <label  class="control-label">Id do Enigma</label>
                <input asp-for="enigmaId" readonly="true" class="form-control" />
                <span asp-validation-for="enigmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Id do usuário</label>
                <input asp-for="usuarioId" readonly="true" class="form-control" />
                <span asp-validation-for="usuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Descrição</label>
                <input asp-for="descricao" readonly="true" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Resposta</label>
                <input asp-for="resposta" class="form-control" maxlength="200"/>
                <span asp-validation-for="resposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
